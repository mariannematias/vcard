
<!doctype html>
<html lang="en">
    {{>head}}

    <body>

        <main id="vertex-container">
            <section class="main">
                <div class="container">
                    <div class="row">
                        {{>sidebar}}
                        <div class="col-md-9 col-sm-12 right">
                            <div class="body">
                                <div id="section1" class="targetDiv profile-section">
                                    <div class="animated fadeInDown">
                                        <h2 class="light"><strong>{{global.info.name}}</strong><br>{{global.info.position}}</h2>
                                        <p class="line"></p>
                                        <p class="desc">{{global.info.bio}}</p>
                                    </div>
                                    <div class="info animated fadeInUp">
                                        <h4 class="light">{{page.profile.content.info.title}}</h4>
                                        <p class="line2"></p>
                                        <ul class="details">
                                            {{#page.details.name.show_or_hide}}
                                                <li>
                                                    <span>{{page.details.name.label}}</span>
                                                    <p>{{page.details.name.text}}</p>
                                                </li>
                                            {{/page.details.name.show_or_hide}}
                                            {{#page.details.dob.show_or_hide}}
                                                <li>
                                                    <span>{{page.details.dob.label}}</span>
                                                    <p>{{page.details.dob.text}}</p>
                                                </li>
                                            {{/page.details.dob.show_or_hide}}
                                            {{#page.details.address.show_or_hide}}
                                                <li>
                                                    <span>{{page.details.address.label}}</span>
                                                    <p>{{page.details.address.text}}</p>
                                                </li>
                                            {{/page.details.address.show_or_hide}}
                                            {{#page.details.email.show_or_hide}}
                                                <li>
                                                    <span>{{page.details.email.label}}</span>
                                                    <p>{{page.details.email.text}}</p>
                                                </li>
                                            {{/page.details.email.show_or_hide}}
                                            {{#page.details.phone.show_or_hide}}
                                                <li>
                                                    <span>{{page.details.phone.label}}</span>
                                                    <p>{{page.details.phone.text}}</p>
                                                </li>
                                            {{/page.details.phone.show_or_hide}}
                                            {{#page.details.website.show_or_hide}}
                                                <li>
                                                    <span>{{page.details.website.label}}</span>
                                                    <p>{{page.details.website.text}}</p>
                                                </li>
                                            {{/page.details.website.show_or_hide}}
                                        </ul>
                                    </div>
                                </div>

                                <div id="section2" class="targetDiv show work">
                                    <div class="head animated fadeInDown">
                                        <h3 class="section-title">{{page.work.title}}</h3>
                                    </div>
                                    <ul class="work-menu">
                                        {{#page.work.menu}}
                                            <li><a href="#" id="{{id}}" class="work-nav {{class}}">{{text}}</a></li>
                                        {{/page.work.menu}}
                                    </ul>

                                    <div id="lightgallery">
                                        {{#page.work.pics}}
                                            <a href="{{img}}">
                                                <img class="thumb animated flipInX {{class}}" src="{{{img}}}">
                                            </a>
                                        {{/page.work.pics}}
                                        {{#page.work.pics2}}
                                            <a href="{{img}}">
                                                <img class="thumb animated flipInX {{class}}" src="{{{img}}}">
                                            </a>
                                        {{/page.work.pics2}}                                          
                                    </div>
                                </div> 

                                <div id="section3" class="targetDiv resume">
                                    <div class="head animated fadeInDown">
                                        <h3 class="section-title">{{page.resume.title}}</h3>
                                    </div>
                                    <h4 class="light">{{page.resume.educ.title}}</h4>
                                    <p class="line2"></p>
                                    <ul class="schools animated fadeInLeft">
                                        {{#schools}}
                                            <li>
                                                <p class="school">{{name}}</p>
                                                <p class="year"><i class="far fa-calendar-alt"></i>{{dateRange}}</p>
                                                <p class="descr">{{description}}</p>
                                            </li>
                                        {{/schools}}
                                    </ul>
                                    <h4 class="light">{{page.resume.skills.title}}</h4>
                                    <p class="line2"></p>
                                    <div class="graph">
                                        {{#page.resume.skills.graph}}
                                            <span>{{text}}</span>
                                            <div class="{{class}}"><span>{{percent}}</span></div>
                                        {{/page.resume.skills.graph}}
                                    </div>
                                    <h4 class="light">{{page.resume.services.title}}</h4>
                                    <p class="line2"></p>
                                    <ul class="service-list">
                                        {{#page.resume.services.list}}
                                            <li class="align-center">
                                                <i class="{{icon}}"></i>
                                                <span class="line-list"></span>
                                                <p>{{text}}</p>
                                            </li>
                                        {{/page.resume.services.list}}
                                    </ul>
                                    <h4 class="light top-border">{{page.resume.work.title}}</h4>
                                    <p class="line2"></p>
                                    <ul class="schools animated fadeInLeft">
                                        {{#jobs}}
                                            <li>
                                                <p class="school">{{company}}</p>
                                                <p class="year"><i class="far fa-calendar-alt"></i>{{start}} - {{end}}</p>
                                                <p class="descr">{{description}}</p>
                                            </li>
                                        {{/jobs}}
                                    </ul>
                                </div>

                                <div id="section4" class="targetDiv blog">
                                    <div class="head animated fadeInDown">
                                        <h3 class="section-title">{{page.blog.title}}</h3>
                                    </div>
                                    {{#posts}}
                                        <div class="row post animated flipInX">
                                            <div class="col-md-5 col-sm-12">
                                                <a href="/post/{{slug}}"><img src="{{{image}}}=s512"></a>
                                            </div>
                                            <div class="col-md-7 col-sm-12">
                                                <h4><a href="/post/{{slug}}">{{title}}</a></h4>
                                                <ul class="post-meta">
                                                    <li>
                                                        <i class="far fa-calendar-alt"></i>
                                                        <span>{{dateString}}</span>
                                                    </li>
                                                </ul>
                                                <p class="post-desc"><a href="/post/{{slug}}">{{preview}}</a></p>
                                            </div>
                                        </div>
                                    {{/posts}}
                                </div>

                                <div id="section5" class="targetDiv contact">
                                    <div class="head animated fadeInDown">
                                        <h3 class="section-title">{{page.contact.title}}</h3>
                                    </div>
                                    <div class="animated fadeIn">
                                        <div class="map">
                                            <img src="{{{page.contact.info.img}}}">
                                        </div>
                                        <h4>{{page.contact.info.title}}</h4>
                                        <p class="post-desc">{{page.contact.info.desc}}</p>
                                        <ul class="contact-meta post-meta">
                                            {{#page.contact.info.meta}}
                                                <li>
                                                    <i class="{{icon}}"></i>
                                                    <span>{{text}}<span>
                                                </li>
                                            {{/page.contact.info.meta}}
                                        </ul>
                                        <div class="message-box">
                                            <h4>{{page.contact.message.title}}</h4>
                                            <form>
                                                <div class="row">
                                                    <div class="col-md-4 col-sm-12">
                                                        <input type="text" name="name" id="name" placeholder="name">
                                                        <input type="text" name="email" id="email" placeholder="email">
                                                        <input type="text" name="subj" id="subj" placeholder="Subject">
                                                    </div>
                                                    <div class="col-md-8 col-sm-12">
                                                        <textarea name="message" id="message" rows="6" placeholder="Message"></textarea>
                                                    </div>
                                                </div>
                                                <p class="align-right"><button class="btn btn-send">{{page.contact.message.btntext}}</button></p>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {{>footer}}
                        </div>
                    </div>
                </div>
            </section>
        </main>
        
    </body>
    
    <!-- Vertex library for enabling site updates from https://www.vertex360.co -->
    <script type="text/javascript" src="https://cdn.turbo360-dev.com/dist/vertex.min.js"></script>

    {{>scripts}}
    <script src="/js/custom.js"></script>
  </body>
</html>
