
<!doctype html>
<html lang="en">
    {{>head}}

    <body>

        <main>
            <section class="main">
                <div class="container">
                    <div class="row">
                        {{>sidebar}}
                        <div class="col-md-9 col-sm-12 right">
                            <div class="body">
                                <div class="head animated fadeInDown">
                                    <h3 class="section-title">{{post.title}}</h3>
                                </div>
                                <div class="post blog-post">
                                    <p><img src="{{{post.image}}}"></p>
                                    <h4>{{page.blog.title}}</h4>
                                    <ul class="post-meta">
                                        <li>
                                            <i class="far fa-calendar-alt"></i>
                                            <a href="#">{{post.dateString}}</a>
                                        </li>
                                    </ul>
                                    {{{post.text}}}
                                </div>
                            </div>

                            {{>footer}}
                        </div>
                    </div>
                </div>
            </section>
        </main>
        
    </body>

    {{>scripts}}
  </body>
</html>
