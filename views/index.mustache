
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{{global.name}}</title>

        <link href="css/bootstrap.min.css" rel="stylesheet">
        <link href="css/animate.css" rel="stylesheet">
        <link href="css/style.css" rel="stylesheet">
        <link href="css/lightgallery.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    </head>

    <body>

        <main>
            <section class="main">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-sm-12 left">
                            <div class="profile">
                                <p><img src="{{page.profile.img}}"></p>
                            </div>
                            <ul class="nav">
                                {{#page.nav}}
                                    <li><a class="{{class}}" id="{{id}}" href="#">{{text}}<i class="{{icon}}"></i></a></li>
                                {{/page.nav}}
                            </ul>
                        </div>
                        <div class="col-md-9 col-sm-12 right">
                            <div class="body">
                                <div id="profile" class="profile-section">
                                    <div class="animated fadeInDown">
                                        <h2 class="light">{{page.profile.content.title}} <strong>{{page.profile.content.name}}</strong><br>{{page.profile.content.position}}</h2>
                                        <p class="line"></p>
                                        <p class="desc">{{page.profile.content.desc}}</p>
                                    </div>
                                    <div class="info animated fadeInUp">
                                        <h4 class="light">{{page.profile.content.info.title}}</h4>
                                        <p class="line2"></p>
                                        <ul class="details">
                                            {{#page.profile.content.info.details}}
                                                <li>
                                                    <span>{{label}}</span>
                                                    <p>{{desc}}</p>
                                                </li>
                                            {{/page.profile.content.info.details}}
                                        </ul>
                                    </div>
                                </div>

                                <div id="work" class="work">
                                    <div class="head animated fadeInDown">
                                        <h3 class="section-title">{{page.work.title}}</h3>
                                    </div>
                                    <ul class="work-menu">
                                        {{#page.work.menu}}
                                            <li><a href="#" class="{{class}}">{{text}}</a></li>
                                        {{/page.work.menu}}
                                    </ul>

                                    <div id="lightgallery">
                                        {{#page.work.pics}}
                                            <a href="{{img}}">
                                                <img class="thumb animated flipInX" src="{{img}}">
                                            </a>
                                        {{/page.work.pics}}
                                        {{#page.work.pics}}
                                            <a href="{{img}}">
                                                <img class="thumb animated flipInX" src="{{img}}">
                                            </a>
                                        {{/page.work.pics}}                                          
                                    </div>
                                </div> 

                                <div id="resume" class="resume">
                                    <div class="head animated fadeInDown">
                                        <h3 class="section-title">{{page.resume.title}}</h3>
                                    </div>
                                    <h4 class="light">{{page.resume.educ.title}}</h4>
                                    <p class="line2"></p>
                                    <ul class="schools animated fadeInLeft">
                                        {{#page.resume.educ.schools}}
                                            <li>
                                                <p class="school">{{school}}</p>
                                                <p class="year"><i class="far fa-calendar-alt"></i>{{year}}</p>
                                                <p class="descr">{{desc}}</p>
                                            </li>
                                        {{/page.resume.educ.schools}}
                                    </ul>
                                    <h4 class="light">{{page.resume.skills.title}}</h4>
                                    <p class="line2"></p>
                                    <div class="graph">
                                        {{#page.resume.skills.graph}}
                                            <span>{{text}}</span>
                                            <div class="{{class}}">{{percent}}</div>
                                        {{/page.resume.skills.graph}}
                                    </div>
                                    <h4 class="light">{{page.resume.services.title}}</h4>
                                    <p class="line2"></p>
                                    <ul class="service-list">
                                        {{#page.resume.services.list}}
                                            <li class="align-center">
                                                <i class="{{icon}}"></i>
                                                <span class="line-list"></span>
                                                <p>{{text}}</p>
                                            </li>
                                        {{/page.resume.services.list}}
                                    </ul>
                                    <h4 class="light top-border">{{page.resume.work.title}}</h4>
                                    <p class="line2"></p>
                                    <ul class="schools animated fadeInLeft">
                                        {{#page.resume.work.exp}}
                                            <li>
                                                <p class="school">{{school}}</p>
                                                <p class="year"><i class="far fa-calendar-alt"></i>{{year}}</p>
                                                <p class="descr">{{desc}}</p>
                                            </li>
                                        {{/page.resume.work.exp}}
                                    </ul>
                                </div>

                                <div id="blog" class="blog">
                                    <div class="head animated fadeInDown">
                                        <h3 class="section-title">{{page.blog.title}}</h3>
                                    </div>
                                    {{#page.blog.post}}
                                        <div class="row post animated flipInX">
                                            <div class="col-md-5 col-sm-12">
                                                <img src="{{img}}">
                                            </div>
                                            <div class="col-md-7 col-sm-12">
                                                <h4><a href="#">{{title}}</a>
                                                <ul class="post-meta">
                                                    {{#meta}}
                                                        <li>
                                                            <i class="{{icon}}"></i>
                                                            <a href="#">{{text}}</a>
                                                        </li>
                                                    {{/meta}}
                                                </ul>
                                                <p class="post-desc">{{desc}}</p>
                                            </div>
                                        </div>
                                    {{/page.blog.post}}
                                </div>
                            
                            </div>

                            <footer>
                                <div class="container">
                                    <div class="footer">
                                        <p class="copyright">{{page.footer.copyright}}</p>
                                        <ul class="icons">
                                            {{#page.footer.icons}}
                                                <li>
                                                    <i class="{{icon}}"></i>
                                                </li>
                                            {{/page.footer.icons}}
                                        </ul>
                                    </div>
                                </div>
                            </footer>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        
    </body>

    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/lightgallery.js"></script>
    <script src="js/lg-thumbnail.js"></script>
    <script src="js/lg-fullscreen.js"></script>
    <script src="js/custom.js"></script>
  </body>
</html>
